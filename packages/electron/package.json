{
  "name": "@promptstash/electron",
  "version": "0.1.0",
  "description": "PromptStash desktop application",
  "author": "PromptStash",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "build": "node scripts/build.mjs",
    "start": "electron dist/main/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@promptstash/core": "workspace:*",
    "fastify": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "electron-builder": "^26.7.0",
    "postcss": "^8.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0"
  },
  "build": {
    "appId": "com.promptstash.app",
    "productName": "PromptStash",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    }
  }
}
